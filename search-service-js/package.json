{
  "name": "emplifi-search-service",
  "version": "1.0",
  "description": "Emplifi search service for indexing and search",
  "main": "index.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "concurrently \"npx tsc --watch\" \"nodemon -q build/index.js\"",
    "transpile": "tsc",
    "clean": "rimraf build",
    "sync-env": "sync-dotenv",
    "build": "concurrently \"yarn clean\" \"yarn lint:fix\" \"yarn transpile\"",
    "lint": "eslint . --ext .ts,.json",
    "lint:fix": "eslint --fix . --ext .ts,.json",
    "prettify": "prettier 'src/**/*.ts' --write",
    "prettier:check": "prettier --list-different 'src/**/*.ts'",
    "format:code": "concurrently \"yarn lint:fix\" \"yarn prettify\" \"sync-dotenv\""
  },
  "lint-staged": {
    "*.{ts,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@contentful/rich-text-types": "^15.13.2",
    "@elastic/elasticsearch": "7.17",
    "contentful": "^9.2.4",
    "cors": "^2.8.5",
    "date-fns": "^2.11.1",
    "dotenv": "^16.0.1",
    "elasticsearch": "^16.7.1",
    "express": "4.18.1",
    "helmet": "^5.1.0",
    "http-status-codes": "^2.1.4",
    "joi": "^17.6.0",
    "morgan": "^1.10.0",
    "objection": "^3.0.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/elasticsearch": "^5.0.40",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "chalk": "^4.1.1",
    "concurrently": "^7.2.2",
    "eslint": "^8.18.0",
    "eslint-plugin-security": "^1.4.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sync-dotenv": "^2.6.2",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
